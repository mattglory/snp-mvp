[project]
name = "stacks-nexus-protocol-mvp"
description = "Bitcoin-secured yield aggregator with 12 strategies"
authors = []
telemetry = true
cache_dir = "./.cache"
requirements = []
boot_contracts = ["pox-4"]

# ========================================
# CORE CONTRACTS
# ========================================

# Core Vault Contract
[contracts.vault-stx-v2]
path = "contracts/vault-stx-v2.clar"
clarity_version = 1

# Governance
[contracts.governance]
path = "contracts/governance.clar"
clarity_version = 1

# Strategy Manager V2 (supports 12 strategies)
[contracts.strategy-manager-v2]
path = "contracts/strategy-manager-v2.clar"
clarity_version = 1

# ========================================
# STRATEGY CONTRACTS (12 Total)
# ========================================

# 1. ALEX STX-USDA LP Strategy
[contracts.strategy-alex-stx-usda]
path = "contracts/strategy-alex-stx-usda.clar"
clarity_version = 1

# 2. Arkadiko Vault Strategy
[contracts.strategy-arkadiko-vault]
path = "contracts/strategy-arkadiko-vault.clar"
clarity_version = 1

# 3. Zest Lending Strategy
[contracts.strategy-zest-v1]
path = "contracts/strategy-zest-v1.clar"
clarity_version = 1

# 4. StackSwap DEX Strategy
[contracts.strategy-stackswap-v1]
path = "contracts/strategy-stackswap-v1.clar"
clarity_version = 1

# 5. Bitflow Strategy
[contracts.strategy-bitflow-v1]
path = "contracts/strategy-bitflow-v1.clar"
clarity_version = 1

# 6. Hermetica Strategy
[contracts.strategy-hermetica-v1]
path = "contracts/strategy-hermetica-v1.clar"
clarity_version = 1

# 7. Velar Farm Strategy
[contracts.strategy-velar-farm]
