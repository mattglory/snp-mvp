clarity_version = 1

# 8. STX Stacking Strategy
[contracts.strategy-stx-stacking]
path = "contracts/strategy-stx-stacking.clar"
clarity_version = 1

# 9. sBTC Yield Optimizer (NEW - replaces Wrapped BTC)
[contracts.strategy-sbtc-v1]
path = "contracts/strategy-sbtc-v1.clar"
clarity_version = 1

# 10. Stable Pool Strategy
[contracts.strategy-stable-pool]
path = "contracts/strategy-stable-pool.clar"
