clarity_version = 1

# 12. Granite Lending (NEW)
[contracts.strategy-granite-v1]
path = "contracts/strategy-granite-v1.clar"
clarity_version = 1

# ========================================
# REPL CONFIGURATION
# ========================================

[repl.analysis]
passes = ["check_checker"]

[[repl.analysis.check_checker.passes]]
checker = "transactions"

